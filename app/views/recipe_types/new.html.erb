<div class="block">
  <h2>Cadastrar Tipo de receita</h2>
  <br />
  <% if flash.notice %>
    <div>
      <%= flash.notice %>
    </div>
  <% end %>
  <br />
  <%= form_for RecipeType.new do |f| %>
    <%= f.label :name, 'Tipo de receita', class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
    <%= f.submit 'Criar', class: "btn btn-primary" %>
  <% end %>
</div>